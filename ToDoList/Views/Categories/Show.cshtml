@{
  Layout = "_Layout";
}

    @using ToDoList.Models;

    <h3>Here are all the items in this category:</h3>

    <ol>
    @foreach (Item item in @Model["items"])
    {

      @*loop through the items in the model. Pass the dictionary of the cats and
    items, so we use Model[items] and Model[category to access thes keys and get their values. For each item in the
    model make a list of the items in the categort that are linked by their id, and shown by their description@**@
      <li><a href='/categories/@Model["category"].Id/items/@item.Id'>@item.Description</a></li>
    }
    </ol>

    <p><a href='/categories/@Model["category"].Id/items/new'>Add a new item</a></p>
